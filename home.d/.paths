#!/usr/bin/env bash

[[ "$PATH" != *"sbin"* ]] && PATH="/usr/local/sbin:/usr/sbin:/sbin:${PATH}"

## Add python pip's local path
[[ ( -x /usr/bin/pip ) && ( "$PATH" != *".local"* ) ]] && PATH="${PATH}:${HOME}/.local/bin"

if [[ ( -x /usr/local/go/bin/go ) && ( "$PATH" != *"go"* ) ]]; then
  PATH="${PATH}:/usr/local/go/bin"
  #export GOPATH="${HOME}/work"
  export GOPATH=/stor/work
  export GOBIN="${GOPATH}/bin"
fi
